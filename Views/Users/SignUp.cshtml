
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<body>
    <!-- main -->
    <div class="main">
        <h1 style="color: black">Filet Mignon</h1>
        <div class="main-w3lsrow">
            <!-- login form -->
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <div class="head">
                        <h2>Create your own account</h2>
                        <span class="fa fa-lock"></span>
                    </div>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="AddToDb" method="post">
                            <input type="text" class="name" name="Username" Placeholder="Username" required="" />
                            <input type="password" class="password" name="Password" Placeholder="Password" required="" />
                            <input type="submit" value="SignUp Now">
                        </form>
                    </div>
                    <div class="login-agileits-bottom">
                        <h6>@Html.ActionLink("Log in", "Login", "Users")</h6>
                    </div>

                </div>
            </div>
        </div>
        <!-- copyright -->
        <div class="copyright">
            <p style="color: black"> © 2018 Exact Login Form. All rights reserved | Design by <a href="http://w3layouts.com/" target="_blank">W3layouts</a></p>
        </div>
        <!-- //copyright -->
    </div>
    <!-- //main -->
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
                    window.onload = function () {alert("@ViewBag.Message")};
        </script>
    }
</body>

